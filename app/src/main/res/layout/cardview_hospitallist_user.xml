<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_hospitals_list"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    card_view:cardElevation="5dp"
    android:textAlignment="center"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardMaxElevation="5dp"
    android:gravity="center_horizontal">

    <LinearLayout android:orientation="vertical"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/corona_logo"/>

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textIsSelectable="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="Hospital Details"
            android:textStyle="bold"
            android:id="@+id/User"/>


    </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#333131"
                android:text="Hospital Name:"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:id="@+id/hospitalName"
                android:background="@color/white"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:gravity="start" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"

                android:text="Hospital Id:"/>

            <TextView
                android:id="@+id/HospitalId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:background="@color/white"
                android:textColor="#333131"
                android:textStyle="normal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="Hospital Address:"/>

            <TextView
                android:id="@+id/HospitalAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="#333131"
                android:background="@color/white"
                android:textStyle="normal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="Contact:"/>

            <TextView
                android:id="@+id/HospitalNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="#333131"
                android:background="@color/white"
                android:textStyle="normal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>